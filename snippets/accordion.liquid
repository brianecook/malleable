<accordion-item>
  <div class="c-accordion" data-accordion>
    <svg stroke="currentColor" fill="none" stroke-width="1" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round" height="1.8em" width="1.8em" xmlns="http://www.w3.org/2000/svg"><line x1="12" y1="8" x2="12" y2="16"></line><line x1="8" y1="12" x2="16" y2="12"></line></svg>
    <svg stroke="currentColor" fill="none" stroke-width="1" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round" height="1.8em" width="1.8em" xmlns="http://www.w3.org/2000/svg"><line x1="8" y1="12" x2="16" y2="12"></line></svg>
    <button
      type="button"
      class="c-accordion__toggle u-relative u-full"
      data-accordion-toggle
    >
      {{ title }}
    </button>
    <div class="c-accordion__content rte">
      {{ text | metafield_tag }}
    </div>
  </div>
</accordion-item>