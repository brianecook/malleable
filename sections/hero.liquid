{% assign _settings = section.settings %}

{{ 'hero.min.css' | asset_url | stylesheet_tag }}

<main-hero>
  <div class="hero">
    <div>
      <picture class="hero__background">
        <source media="(min-width: 1024px)" srcset="{{ _settings.image_desktop | img_url: 'master' }}">
        <img src="{{ _settings.image_mobile | img_url: 'master' }}" alt="" loading="eager">
      </picture>
    </div>
    <div class="o-container">
      <div class="hero__content hero__content--{{ _settings.content_alignment }}">
        <h1 class="hero__heading">{{ _settings.heading }}</h1>
        <div class="hero__copy">{{ _settings.copy }}</div>
      </div>
    </div>
  </div>
</main-hero>

<script src="{{ 'hero.min.js' |  asset_url }}" defer></script>

{% schema %}
  {
    "name": "Main Hero",
    "settings": [
      {
        "type": "image_picker",
        "label": "Background Image (Mobile)",
        "id": "image_mobile"
      },
      {
        "type": "image_picker",
        "label": "Background Image (Desktop)",
        "id": "image_desktop"
      },
      {
        "type": "text",
        "label": "Heading",
        "id": "heading"
      },
      {
        "type": "inline_richtext",
        "label": "Copy",
        "id": "copy"
      },
      {
        "type": "select",
        "label": "Content Alignment",
        "id": "content_alignment",
        "options": [
          {
            "value": "top-left",
            "label": "Top Left"
          },
          {
            "value": "center-left",
            "label": "Center Left"
          },
          {
            "value": "bottom-left",
            "label": "Bottom Left"
          },
          {
            "value": "center-center",
            "label": "Center Center"
          }
        ],
        "default": "center-center"
      }
    ],
    "presets": [
      {
        "category": "Hero",
        "name": "Main Hero"
      }
    ]
  }
{% endschema %}