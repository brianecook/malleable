<div class="o-container">
  <div class="c-shopGrid">
    <div class="c-shopGrid__image">
      <img class="u-full" src="{{ product.featured_image | image_url }}" />
    </div>
    <div class="c-shopGrid__details">
      {{ product.description }}
      {% render 'widget-product-actions', _product: product %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product Top"
}
{% endschema %}